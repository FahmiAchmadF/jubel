<% @products.each_with_index do |product, index| %>
  <% if (index+3)%3 === 0 %><div class="row"><% end %>
    <div class="col-md-4">

      <a href="<%= show_path(product.id) %>" style="text-decoration: none; color: inherit;" title="<%= product.name %>">
        <div class="card">
          <%= image_tag has_photo?(product.product_photos[0]), class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text">
              <strong><%= number_to_currency product.price %></strong>
            </p>
            <p class="card-text"><small class="text-muted"><%= time_ago_in_words product.created_at %> ago</small></p>
          </div>
        </div>
      </a>
    </div>
  <% if ((index+1)%3 === 0 or @products.last === product) %></div><br><% end %>
<% end %>