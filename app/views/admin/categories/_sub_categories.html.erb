<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Edit', edit_admin_category_sub_category_path(@category.id, category) %></td>
        <td><%= link_to 'Destroy', admin_category_sub_category_path(@category.id, category), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
